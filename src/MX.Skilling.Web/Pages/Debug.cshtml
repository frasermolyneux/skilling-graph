@page
@model MX.Skilling.Web.Pages.DebugModel
@{
    ViewData["Title"] = "Debug";
}

<h1>Authentication Debug Information</h1>

<h2>User Identity</h2>
<p><strong>IsAuthenticated:</strong> @Model.IsAuthenticated</p>
<p><strong>Authentication Type:</strong> @Model.AuthenticationType</p>
<p><strong>Name:</strong> @Model.UserName</p>
<p><strong>Name Claim Type:</strong> @Model.NameClaimType</p>

<h2>Claims</h2>
@if (Model.Claims.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Type</th>
                <th>Value</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model.Claims)
            {
                <tr>
                    <td>@claim.Type</td>
                    <td>@claim.Value</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No claims found</p>
}

<h2>Admin Check</h2>
<p><strong>Is Admin:</strong> @Model.IsAdmin</p>

<h2>Authorization</h2>
<p><strong>Admin Policy Result:</strong> @Model.AdminPolicyResult</p>
