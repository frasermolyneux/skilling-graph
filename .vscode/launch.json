{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch MX.Skilling.Web",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/src/MX.Skilling.Web/bin/Debug/net9.0/MX.Skilling.Web.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/MX.Skilling.Web",
      "console": "internalConsole",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "https://localhost:7053;http://localhost:5088"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/src/MX.Skilling.Web/Views"
      },
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      }
    },
    {
      "name": "Launch MX.Skilling.Web (No Build)",
      "type": "coreclr",
      "request": "launch",
      "program": "${workspaceFolder}/src/MX.Skilling.Web/bin/Debug/net9.0/MX.Skilling.Web.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/MX.Skilling.Web",
      "console": "internalConsole",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "https://localhost:7053;http://localhost:5088"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/src/MX.Skilling.Web/Views"
      },
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      }
    },
    {
      "name": "Launch MX.Skilling.Web (Production)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-release",
      "program": "${workspaceFolder}/src/MX.Skilling.Web/bin/Release/net9.0/MX.Skilling.Web.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/MX.Skilling.Web",
      "console": "internalConsole",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Production",
        "ASPNETCORE_URLS": "https://localhost:7053;http://localhost:5088"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/src/MX.Skilling.Web/Views"
      },
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      }
    },
    {
      "name": "Attach to MX.Skilling.Web",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickProcess}"
    },
    {
      "name": "Debug Tests",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "dotnet",
      "args": [
        "test",
        "${workspaceFolder}/src/MX.Skilling.Web.Tests/MX.Skilling.Web.Tests.csproj",
        "--no-build"
      ],
      "cwd": "${workspaceFolder}/src",
      "console": "internalConsole",
      "stopAtEntry": false
    },
    {
      "name": "Debug Unit Tests",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "dotnet",
      "args": [
        "test",
        "${workspaceFolder}/src/MX.Skilling.sln",
        "--no-build",
        "--filter",
        "Category=Unit"
      ],
      "cwd": "${workspaceFolder}/src",
      "console": "internalConsole",
      "stopAtEntry": false
    },
    {
      "name": "Debug Integration Tests",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "dotnet",
      "args": [
        "test",
        "${workspaceFolder}/src/MX.Skilling.sln",
        "--no-build",
        "--filter",
        "Category=Integration"
      ],
      "cwd": "${workspaceFolder}/src",
      "console": "internalConsole",
      "stopAtEntry": false
    },
    {
      "name": "Debug UI Tests",
      "type": "coreclr",
      "request": "launch",
      "program": "dotnet",
      "args": [
        "test",
        "${workspaceFolder}/src/MX.Skilling.Web.UITests/MX.Skilling.Web.UITests.csproj"
      ],
      "cwd": "${workspaceFolder}/src",
      "console": "internalConsole",
      "stopAtEntry": false,
      "env": {
        "KEY_VAULT_URI": "https://kv-skilling-dev-e3r7w4.vault.azure.net/"
      }
    },
    {
      "name": "Debug UI Tests (Playwright Debug Mode)",
      "type": "coreclr",
      "request": "launch",
      "program": "dotnet",
      "args": [
        "test",
        "${workspaceFolder}/src/MX.Skilling.Web.UITests/MX.Skilling.Web.UITests.csproj"
      ],
      "cwd": "${workspaceFolder}/src",
      "console": "internalConsole",
      "stopAtEntry": false,
      "env": {
        "PLAYWRIGHT_DEBUG": "1",
        "KEY_VAULT_URI": "https://kv-skilling-dev-e3r7w4.vault.azure.net/"
      }
    },
    {
      "name": "Launch MX.Skilling.Web (Watch Mode)",
      "type": "coreclr",
      "request": "launch",
      "program": "dotnet",
      "args": [
        "watch",
        "--project",
        "${workspaceFolder}/src/MX.Skilling.Web",
        "run",
        "--launch-profile",
        "https"
      ],
      "cwd": "${workspaceFolder}/src/MX.Skilling.Web",
      "console": "internalConsole",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/src/MX.Skilling.Web/Views"
      },
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      }
    },
    {
      "name": "Launch MX.Skilling.Web (UITest Mode)",
      "type": "coreclr",
      "request": "launch",
      "program": "dotnet",
      "args": [
        "watch",
        "--project",
        "${workspaceFolder}/src/MX.Skilling.Web",
        "run",
        "--launch-profile",
        "UITest"
      ],
      "cwd": "${workspaceFolder}/src/MX.Skilling.Web",
      "console": "internalConsole",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "UITest",
        "KEY_VAULT_URI": "https://kv-skilling-dev-e3r7w4.vault.azure.net/"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/src/MX.Skilling.Web/Views"
      },
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      }
    }
  ]
}
