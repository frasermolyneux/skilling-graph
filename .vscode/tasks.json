    {
      "label": "test-ui-debug",
      "command": "dotnet",
      "type": "process",
      "args": [
        "test",
        "${workspaceFolder}/src/MX.Skilling.Web.UITests",
        "--verbosity",
        "normal"
      ],
      "group": "test",
      "options": {
        "env": {
          "PLAYWRIGHT_DEBUG": "1",
          "KEY_VAULT_URI": "https://kv-skilling-dev-e3r7w4.vault.azure.net/"
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "install-playwright-browsers",
      "command": "pwsh",
      "type": "process",
      "args": [
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}/src/MX.Skilling.Web.UITests/install-browsers.ps1"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    }
  ]
}
